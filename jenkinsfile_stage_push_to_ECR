stage('Push to ECR') {
    steps {
        script {
            sh '''
            aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin <AWS_ACCOUNT_ID>.dkr.ecr.$AWS_REGION.amazonaws.com
            docker tag myapp:${BUILD_NUMBER} <AWS_ACCOUNT_ID>.dkr.ecr.$AWS_REGION.amazonaws.com/myapp:${BUILD_NUMBER}
            docker push <AWS_ACCOUNT_ID>.dkr.ecr.$AWS_REGION.amazonaws.com/myapp:${BUILD_NUMBER}
            '''
        }
    }
}
